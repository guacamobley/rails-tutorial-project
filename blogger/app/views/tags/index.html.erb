<h1>All Tags</h1>

<ul id="tags">
	<% @tags.each do |tag| %>
		<li>
			<%= link_to tag, tag_path(tag), class: 'tag' %>
      <%= link_to "delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the tag?"} %>
		</li>
	<% end %>
</ul>

<p><%= link_to 'Create a new article', new_article_path, class: 'new_article' %></p>